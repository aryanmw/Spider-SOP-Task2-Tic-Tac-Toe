<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NameActivity"
    android:background="@drawable/board">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aclonica"
        android:text="TIC TAC TOE"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player 1 name"
        android:id="@+id/tv_player1"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:fontFamily="@font/berkshire_swash"
        android:textSize="30dp"
        android:layout_marginTop="100dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_player1"
        android:id="@+id/et_player1Name"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player 2 name"
        android:id="@+id/tv_player2"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/berkshire_swash"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:visibility="invisible"

        android:layout_below="@id/et_player1Name"
        android:layout_marginTop="50dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_player2"
        android:visibility="invisible"
        android:id="@+id/et_player2Name"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="GO"
        android:background="#FFC107"
        android:id="@+id/button_done"
        android:layout_below="@id/et_player2Name"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"/>


</RelativeLayout>